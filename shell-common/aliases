alias cp="cp -i"     # confirm before overwriting something
alias df='df -h'     # human-readable sizes
alias free='free -m' # show sizes in MB
alias np='nano -w PKGBUILD'
alias mkdir="mkdir -p"
alias more=less

alias seti3="vim ~/.config/i3/config"

# apt aliases
if cmd_available apt; then
    alias sai='sudo apt install'
    alias sau='sudo apt update'
    alias sag='sudo apt upgrade'
fi

# Alias tmatrix
alias tmatrix="tmatrix -C red -s 10"

# Run emacs in CLI
alias emacs="emacs -nw"

# Vim's :q
alias :q="exit"

# Trash alias
alias rmt='gio trash'

# File managment
# alias ..='cd ..'
alias md=mkdir
alias rm.='YEET=`pwd` && cd .. && gio trash "$YEET"'

# Make dir and slide in
mdcd() {
    mkdir $1 && cd $1
}

# Set up go-to-projects aliases if running bash. Use named directories in zsh
if [ -n "$BASH_VERSION" ]; then
    if [ -d "$HOME/Projects" ]; then
        alias cdp="cd $HOME/Projects"
    elif [ -d "$HOME/projects" ]; then
        alias cdp="cd $HOME/projects"
    fi
fi

